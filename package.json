{
  "version": "0.3.0",
  "license": "MIT",
  "description": "React wrapper for Jodit. Fully written in Typescript.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "jodit",
    "jodit react",
    "react",
    "rich text editor",
    "wysiwyg",
    "rte"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Fedeorlandau/jodit-react-ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch --entry src/* ",
    "build": "tsdx build --entry src/*",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build --entry src/*",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx test && tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "jodit-react-ts",
  "author": "Federico Orlandau",
  "module": "dist/jodit-react-ts.esm.js",
  "size-limit": [
    {
      "path": "dist/jodit-react-ts.cjs.production.min.js",
      "limit": "200 KB"
    },
    {
      "path": "dist/jodit-react-ts.esm.js",
      "limit": "200 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "husky": "^4.3.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "jodit": "^3.5.4"
  }
}
